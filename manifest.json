{
  "manifest_version": 3,
  "name": "FlexBookmark",
  "version": "1.1.0",
  "description": "Advanced bookmark management with modern UI",
  "icons": {
    "128": "assets/icons/icon.png"
  },
  "permissions": [
    "bookmarks",
    "storage",
    "tabs",
    "identity",
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/tasks.readonly"
    ]
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' https://apis.google.com https://www.googleapis.com https://accounts.google.com; object-src 'self'"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/newtab/*.js",
        "src/content/newtab/components/*.js",
        "src/content/utils/*.js",
        "assets/styles/*.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}